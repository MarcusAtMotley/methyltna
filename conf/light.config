/*
~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~
    Motleybio-organization/modulestesting Nextflow light config file
~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~
    A lightweight config file for smaller compute instances with limited resources.
    Designed for testing or running on smaller cloud instances.
----------------------------------------------------------------------------------------
*/

process {

    // Conservative defaults for smaller instances (4-16 cores, 16-64GB RAM)
    cpus   = { 1      * task.attempt }
    memory = { 4.GB   * task.attempt }
    time   = { 6.h    * task.attempt }

    errorStrategy = { task.exitStatus in ((130..145) + 104 + 175) ? 'retry' : 'finish' }
    maxRetries    = 1
    maxErrors     = '-1'

    // Process-specific resource requirements for light instances
    withLabel:process_single {
        cpus   = { 1                   }
        memory = { 4.GB * task.attempt }
        time   = { 6.h  * task.attempt }
    }
    withLabel:process_low {
        cpus   = { 2     * task.attempt }
        memory = { 8.GB  * task.attempt }
        time   = { 6.h   * task.attempt }
    }
    withLabel:process_medium {
        cpus   = { 4     * task.attempt }
        memory = { 16.GB * task.attempt }
        time   = { 12.h  * task.attempt }
    }
    withLabel:process_high {
        cpus   = { 6     * task.attempt }
        memory = { 24.GB * task.attempt }
        time   = { 24.h  * task.attempt }
    }
    withLabel:process_long {
        time   = { 48.h  * task.attempt }
    }
    withLabel:process_high_memory {
        memory = { 48.GB * task.attempt }
    }
    withLabel:error_ignore {
        errorStrategy = 'ignore'
    }
    withLabel:error_retry {
        errorStrategy = 'retry'
        maxRetries    = 2
    }
    withLabel: process_gpu {
        ext.use_gpu = { workflow.profile.contains('gpu') }
        accelerator = { workflow.profile.contains('gpu') ? 1 : null }
    }

    // Conservative resource allocation for Bowtie2 index building on smaller instances
    withName:BOWTIE2_BUILD_INDEX {
        cpus   = { 8     * task.attempt }
        memory = { 32.GB * task.attempt }
        time   = { 72.h  * task.attempt }
    }
}